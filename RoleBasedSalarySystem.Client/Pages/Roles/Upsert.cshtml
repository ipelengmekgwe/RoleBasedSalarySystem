@page
@model RoleBasedSalarySystem.Client.Pages.Roles.UpsertModel

<br/>
<h2 class="text-info">@(Model.Role == null ? "Create" : "Edit") Role</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        @if (Model.Role != null)
        {
            <input type="hidden" asp-for="Role.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Role.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Role.Name" class="form-control" />
            </div>
            <span asp-validation-for="Role.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Role.Rate"></label>
            </div>
            <div class="col-6">
                <input type="number" asp-for="Role.Rate" step="0.01" class="form-control" />
            </div>
            <span asp-validation-for="Role.Rate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Role == null ? "Create" : "Update")
                </button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Roles</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

